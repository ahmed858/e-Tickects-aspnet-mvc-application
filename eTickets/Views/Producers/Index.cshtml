@model IEnumerable<Producer>
@{
    ViewData["Title"] = "List of Producers";
}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table table-hover">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var producer in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="img-fluid rounded-circle" src="@producer.ProfilePictureURL" alt="alt" style="max-width:150px;" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => producer.FullName)
                        </td>

                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => producer.Bio)
                        </td>

                        <td class="align-middle">
                            <a class="btn btn-outline-primary"> <i class="bi bi-pencil-square"></i>  </a> |
                            <a class="btn btn-outline-info"> <i class="bi bi-eye"></i>  </a> |
                            <a class="btn btn-outline-danger">  <i class="bi bi-trash"></i>  </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>

</div>
