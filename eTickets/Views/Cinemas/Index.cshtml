@model IEnumerable<Cinema>

@{
    ViewData["Title"] = "List of Cinema";
}
<!-- Using locally downloaded Bootstrap Icons -->


<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table table-hover">
            <thead>
                <tr class="text-center">

                    <th>@Html.DisplayNameFor(model => model.Logo)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cinema in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="img-fluid rounded-circle" src="@cinema.Logo" alt="alt" style="max-width:150px;" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => cinema.Name)
                        </td>

                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => cinema.Description)
                        </td>

                        <td class="align-middle">
                            <a class="btn btn-outline-primary"> <i class="bi bi-pencil-square"></i>  </a> |
                            <a class="btn btn-outline-info"> <i class="bi bi-eye"></i>  </a> 
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>

</div>
